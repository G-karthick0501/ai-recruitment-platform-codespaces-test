{
  "name": "AI Recruitment Platform",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "workspaceFolder": "/workspaces/ai-recruitment-platform-codespaces-test",
  "postCreateCommand": "echo 'Container created! Node.js, npm, and Python pre-installed. Run start_all_services.sh to start services.'",
  "portsAttributes": {
    "8000": {
      "label": "Resume Analyzer",
      "onAutoForward": "notify"
    },
    "5000": {
      "label": "Backend API",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Frontend",
      "onAutoForward": "notify"
    },
    "8002": {
      "label": "Audio Emotion Service",
      "onAutoForward": "notify"
    },
    "8003": {
      "label": "Transcription Service",
      "onAutoForward": "notify"
    },
    "8001": {
      "label": "Video Emotion Service",
      "onAutoForward": "notify"
    }
  },
  "forwardPorts": [8000, 5000, 5173, 8001, 8002, 8003],
  "remoteUser": "vscode"
}
